pipeline {
    agent any

    stages {
        stage("Build") {
            steps {
                echo "Building was successful"
                echo "Tool : Maven"
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                echo "Unit and Integration Test passed"
                echo "Tool : Junit"
            }
            post {
                success {
                    archiveArtifacts artifacts: 'target/logs/*.log', allowEmptyArchive: true
                    emailext(
                        to: "chermod2011@gmail.com",
                        subject: "Build Status Email",
                        body: "Build was successful!",
                        attachmentsPattern: 'target/logs/*.log'
                    )
                }
                failure {
                    archiveArtifacts artifacts: 'target/logs/*.log', allowEmptyArchive: true
                    emailext(
                        to: "chermod2011@gmail.com",
                        subject: "Build Status Email",
                        body: "Build failed!",
                        attachmentsPattern: 'target/logs/*.log'
                    )
                }
            }
        }
        stage('Code Analysis') {
            steps {
                echo "Code Analysis : Completed"
                echo "Tool : Jmeter"
            }
        }
        stage('Security Scan') {
            steps {
                echo "Security Scan completed"
                echo "Tool : Jmeter"
            }
            post {
                success {
                    archiveArtifacts artifacts: 'target/logs/*.log', allowEmptyArchive: true
                    emailext(
                        to: "chermod2011@gmail.com",
                        subject: "Security scan status Email",
                        body: "Security scan was successful!",
                        attachmentsPattern: 'target/logs/*.log'
                    )
                }
                failure {
                    archiveArtifacts artifacts: 'target/logs/*.log', allowEmptyArchive: true
                    emailext(
                        to: "chermod2011@gmail.com",
                        subject: "Security scan status Email",
                        body: "Security scan failed!",
                        attachmentsPattern: 'target/logs/*.log'
                    )
                }
            }
        }
        stage('Deploy to Staging') {
            steps {
                echo "Deployed to Staging"
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                echo "Integration Tests on Staging passed"
                echo "Tool : Jmeter"
            }
        }
        stage('Deploy to Production') {
            steps {
                echo "Deployed to Production"
            }
        }
    }
}
