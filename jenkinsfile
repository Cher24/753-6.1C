pipeline {
    agent any
    environment {
        DIRECTORY_PATH = '/path/to/code/directory' // Update this path if necessary
        TESTING_ENVIRONMENT = 'Testing'
        PRODUCTION_ENVIRONMENT = 'Cher'
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building was successful.'
		echo 'Tool : Maven'
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                echo 'Unit and Integration Test passed'
                echo 'Tool : Junit'
            }
        }
        stage('Code Analysis') {
            steps {
                echo 'Code Analysis : Completed'
                echo 'Tool : Jmeter'
            }
        }
        stage('Security Scan') {
            steps {
                echo 'Security Scan complete'
                echo 'Tool : Jmester'
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                echo 'Integration Tests on Staging passed'
                echo 'Tool : Jmeter'
                sleep 10
            }
            post {
                success {
                    emailext (
                        to: 'chermod2011@gmail.com', 
                        subject: 'Test Status Email',
                        body: 'Test successful', 
                    )
                }
            }
        }
        stage('Deploy to Production') {
            steps {
                echo 'Deployed to Production'
            }
        }
    }
}
